<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/filter"
    tools:context=".Filter">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="30dp">

        <TextView
            android:id="@+id/expert_text"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Expert in"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/expert_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="30dp">

        <TextView
            android:id="@+id/rating_text"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Rating"
            android:layout_gravity="center"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RatingBar
                android:id="@+id/rating_rating_bar"
                style="@android:style/Widget.Material.RatingBar.Indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:isIndicator="false"
                android:max="5"
                android:stepSize=".5" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="30dp">

        <TextView
            android:id="@+id/distance_text"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Distance"
            android:textSize="18sp" />
        <Spinner
            android:id="@+id/distance_spinner"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="miles"
            android:textSize="18sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="30dp">

        <TextView
            android:id="@+id/price_text"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Price"
            android:textSize="18sp" />


        <Button
            android:id="@+id/price1_button"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:text="$"
            android:textColor="@color/colorAccent" />
        <Button
            android:id="@+id/price2_button"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="42dp"
            android:layout_height="40dp"
            android:text="$$" />

        <Button
            android:id="@+id/price3_button"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="47dp"
            android:layout_height="40dp"
            android:text="$$$" />

        <Button
            android:id="@+id/price4_button"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="56dp"
            android:layout_height="40dp"
            android:text="$$$$" />


    </LinearLayout>

    <Button
        android:id="@+id/complete_btn"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:text="Complete" />



</LinearLayout>